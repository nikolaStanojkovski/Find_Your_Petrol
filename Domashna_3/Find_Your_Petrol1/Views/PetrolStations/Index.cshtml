@model IEnumerable<Find_Your_Petrol1.Models.PetrolStation>

@{
    ViewBag.Title = "Бензински";
}

<h2>Сите бензински пумпи во Р.М.</h2>

<div class="row">
    <div class="col-md-6">
        <p>
            @if (User.IsInRole("Administrator"))
            {
                @Html.ActionLink("Креирај нова бензинска", "Create")
            }
        </p>
    </div>
    <div class="col-md-6">
        <div class="row" style="margin-bottom:40px;margin-left:50px;">
            <img src="~/Pictures/searchIcon.png" alt="Search Icon" width="50" height="50" style="display:inline-block;margin-right:-20px;" />
            <input type="search" name="search" value="" placeholder="Најди бензинска по име, град, координати" class="form-control" style="border-radius:40px;width:100%; display:inline-block;" />
        </div>
    </div>
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImeNaBenzinska)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RabotnoVreme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Oddalecenost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ocena)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ImeNaBenzinska)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RabotnoVreme)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Oddalecenost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ocena)
        </td>
        <td>
            @if (User.IsInRole("Administrator"))
            {
                @Html.ActionLink("Измени", "Edit", new { id = item.PetrolStationId }) <p style="display:inline-block">|</p>
                @Html.ActionLink("Избриши", "Delete", new { id = item.PetrolStationId })
            }
            |
            @Html.ActionLink("Детали", "Details", new { id = item.PetrolStationId }) 

        </td>
    </tr>
}

</table>
