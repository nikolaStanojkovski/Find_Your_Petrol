@model Find_Your_Petrol1.Models.DistanceCalculator

@{
    ViewBag.Title = "CalculateDistance";
}

<h2>Спореди оддалеченост на две бензински</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div>
    <div>
        <br />
        <h3>Изберете ја првата бензинска пумпа:</h3>
        @Html.DropDownListFor(m => m.FromId,
        new SelectList(Model.petrols, "PetrolStationId", "ImeNaBenzinska"),
        new { @class = "form-control" })
        <br />
    </div>
    <br />
    <div>

        <h3>Изберете ја втората бензинска пумпа:</h3>
        @Html.DropDownListFor(m => m.ToId,
        new SelectList(Model.petrols, "PetrolStationId", "ImeNaBenzinska"),
        new { @class = "form-control" })

    </div>
</div>
<br /> <br />
<div>
    <div class="col-md-offset-2 col-md-10">
        <button type="submit" class="btn btn-default">Calculate</button>
    </div>
</div>
    
}

<div>
    <div>
        <div class="col-md-4">
            <h3>Оддалеченост:</h3>
        </div>
        <div class="col-md-1">
            <h5 id="oddalecenost">@Model.kilometres km</h5>
        </div>
    </div>
</div>
<br /> <br />